<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #dfd7b0 #dfd7b0;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.sw.GC50.view.GUI.controllers.CreateGameController">
   <children>
      <TextField fx:id="gameName" promptText="nome partita" />
      <TextField fx:id="finalScore" promptText="punteggio finale" />
      <RadioButton fx:id="twoPlayersButton" mnemonicParsing="false" text="RadioButton" />
      <RadioButton fx:id="threePlayersButton" mnemonicParsing="false" text="RadioButton" />
      <RadioButton fx:id="fourPlayersButton" mnemonicParsing="false" text="RadioButton" />
      <Button fx:id="createGameButton" mnemonicParsing="false" onAction="#handleCreateGameButton" styleClass="orange-button" text="Button" />
   </children>
</AnchorPane>
